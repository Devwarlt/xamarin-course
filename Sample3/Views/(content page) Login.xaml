<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="https://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Sample3.Views.Logout">
    <ContentPage.Content>
        <Grid Margin="15" VerticalOptions="CenterAndExpand">
            <Grid.RowDefinitions>
                <Grid.RowDefinition Height="auto" />
                <Grid.RowDefinition Height="auto" />
                <Grid.RowDefinition Height="auto" />
                <Grid.RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Entry Placeholder="Email" PlaceholderColor="DarkGray" MaxLength="20" />
            <Entry Placeholder="Password" IsPassword="True" PlaceholderColor="DarkGray" MaxLength="10" Grid.Row="1" />
            <FlexLayout Direction="Row" WidthRequest="100" Grid.Row="2">
                <Switch OnColor="Red" />
                <Label Text="Save password" />
            </FlexLayout>
            <Button Text="Login" TextColor="White" FontSize="Medium" BackgroundColor="Red" Grid.Row="3" />
        </Grid>
    </ContentPage.Content>
</ContentPage>